	<style>

		body {
			background-color: #328893;
			height: 100vh;
		}

		.login-form {
			padding: 5rem;
			font-size: 1.5rem;
			height: 100%;
			vertical-align: middle;
		}

		.col-md-4.login-form {
			/*padding: 10rem;*/
		}

		.login-form table {
			margin: auto;
			margin-top: 10px;
			width: 100%;
			background-color: #328893;
		}

		.login-form table tr {
			margin: auto;
			padding: 10px;
			width: 100%;
			border: 1px solid white;
		}

		.login-form table tr td {
			margin: auto;
			padding: 10px;
			width: 100%;
		}

		.login-form table tr td input {
			margin: auto;
			width: 100%;
			border: 0px;
			color: white;
			background-color: #328893;	
		}


		.login-form table tr td input::placeholder {
			color: white;
		}

		.submit-tr {
			background-color: #ffffff;
		}

		.submit-tr td {
			padding: 0px !important;
		}

		.submit-tr input {
			padding: 10px;
			background-color: #ffffff !important;
			border: 0px !important;
			color: #328893 !important;
		}

		.submit-tr #btn-submit::hover {
			background-color: #5b949b !important;
		}

		input:focus {
			/*box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(255, 0, 0, 0.6);*/
			outline: none;
		}

		input[type=button] {
			background-color: white;
		}

	</style>

	<script>
		$(document).ready( function(){


			// Login Session Check - Start
    		var loginCheck = {
    			type: "POST",
    			url: "/authcheck",
    			data: null,

    			success: function(results){
    				if( results && results === "E" ){
    					alert( "You must login this system for assigning failures." );
    					$(location).attr( "href", "/" );
    				}
    			},
    			error: function(error){
    				alert( "An error occured.\nPlease contact administrator." );
    			}
    		}

    		$.ajax( loginCheck );
    		// Login Session Check - End


			
			$("table tr td input").focusin( function(){
				$(this).parent().parent().css("background-color", "#5b949b");
				$(this).parent().css("background-color", "#5b949b");
				$(this).css("background-color", "#5b949b");
			} );
			$("table tr td input").focusout( function(){
				$(this).parent().parent().css("background-color", "#328893");
				$(this).parent().css("background-color", "#328893");
				$(this).css("background-color", "#328893");
			} );



			var marginTop = ( $(window).height() - $(".container-fluid").height() ) / 2;
			$(".container-fluid").css( "marginTop", marginTop - 30 );

			$("#btn-submit").on( "click", function(){
				// $(location).attr( "href", "/" );
				$("#login").submit();
			} );

		} );
	</script>

	<title>RGT MOBILE</title>
</head>
<body>

	

		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-4 col-md-4">
				</div>
				
					<form name="login" id="login" method="post" action="/authcheck">

				
						<div class="col-lg-4 col-md-4 login-form">

							<div style="text-align: center">
								<span style="font-size: 15rem; text-align: center; color: white">
									<i class="fas fa-cogs"></i>
								</span>

								<h3 style="font-weight:700; color: white; text-align: center; margin-bottom: 3rem">
									Assign RGT Failure
								</h3>
							</div>

							<table clsss="table table-responsive" >
								<tr class="userid-tr">
									<td style="width: 1.25rem; height: 1.25rem;">
										<span>
											<i class="fas fa-user" style="color: white;"></i>
										</span>
									</td>
									<td>
										<!-- <span>
											<i class="fas fa-user"></i>
										</span> -->
										<input type="text" name="userid" id="userid" placeholder="USERID" required />
									</td>
								</tr>
								<tr class="password-tr">
									<td style="width: 1.25rem; height: 1.25rem;">
										<span>
											<i class="fas fa-unlock" style="color:white;"></i>
										</span>
									</td>
									<td>
										<!-- <span>
											<i class="fas fa-unlock"></i>
										</span> -->
										<input type="password" name="password" id="password" placeholder="PASSWORD" required />
									</td>
								</tr>
							</table>

							
							<table class="table table-responsive">
								<tr class="submit-tr">
									<td>
										<input type="submit" name="btn-submit" id="btn-submit" placeholder="SUBMIT" value="LOGIN" style="font-weight: 700" />
									</td>
								</tr>
							</table>


							<div style="background-color: #328893; color: #ededed; text-align:center; padding-top:2rem">
								
								<div>
									<p style="font-size: 1.5rem;" >
										Copyright(c) 2018 Doosan I&C<br>
										Beta-Test Version - v.0.0.1
									</p>
								</div>
							</div>

						</div>
					</form>
				
				<div class="col-lg-4 col-md-4">
				</div>
			</div>
		</div>

